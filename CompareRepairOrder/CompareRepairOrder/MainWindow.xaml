<Window x:Class="CompareRepairOrder.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CompareRepairOrder"
        mc:Ignorable="d"
        Title="Compare Repair Order" Height="120" Width="400">
    <Grid>
        <Label Content="請選擇要比對的Excel" HorizontalAlignment="Left" Margin="13,18,0,0" VerticalAlignment="Top" Width="129"/>
        <TextBox Name="txtFilePath" HorizontalAlignment="Left" Height="23" Margin="13,130,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="479" IsReadOnly="True" Visibility="Hidden"/>
        <Button Content="Browser" HorizontalAlignment="Left" Margin="147,18,0,0" VerticalAlignment="Top" Width="75" Click="btnSelectExcel"/>
        <Button Content="CheckData" HorizontalAlignment="Left" Margin="147,90,0,0" VerticalAlignment="Top" Width="75" Height="25" RenderTransformOrigin="1.559,0.12" Visibility="Hidden"/>
        <ComboBox  SelectedIndex="0" x:Name="ddlExcelSheets" HorizontalAlignment="Left" Margin="13,90,0,0" VerticalAlignment="Top" Width="120"  Visibility="Hidden"/>
        <Label x:Name="label" Content="自動將比對結果匯出成Excel，並另存原本選擇Excel的同目錄" HorizontalAlignment="Left" Margin="10,53,0,0" VerticalAlignment="Top" Height="32" Width="333" />

    </Grid>
</Window>
